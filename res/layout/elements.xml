<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/RelativeLayout01"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/nav_bar" >

        <TextView
            android:id="@+id/tvnameapp"
            style="@style/logo_shadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/app_name"
            android:textColor="#ffffff"
            android:textSize="28dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Button01"
            style="@style/AudioFileInfoOverlayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="#00000000"
            android:onClick="onClick"
            android:paddingLeft="10dp"
            android:text="@string/login"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btsetting"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/Button01"
            android:background="@drawable/btsetting"
            android:onClick="onClick"
            android:textColor="@color/textthin" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp" >

        <Button
            android:id="@+id/btprofile"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.25"
            android:background="@layout/btselector"
            android:onClick="onClick"
            android:text="@string/Profile"
            android:textColor="@color/textthin" />

        <LinearLayout
            android:id="@+id/LinearLayout01"
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/space_menu"
            android:orientation="vertical" >
        </LinearLayout>

        <Button
            android:id="@+id/btactivity"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.25"
            android:background="@layout/btselector"
            android:onClick="onClick"
            android:text="@string/Activity"
            android:textColor="@color/textthin" />

        <LinearLayout
            android:id="@+id/LinearLayout02"
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/space_menu"
            android:orientation="vertical" >
        </LinearLayout>

        <Button
            android:id="@+id/btphoto"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.25"
            android:background="@layout/btselector"
            android:onClick="onClick"
            android:text="@string/Photos"
            android:textColor="@color/textthin" />

        <LinearLayout
            android:id="@+id/LinearLayout03"
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/space_menu"
            android:orientation="vertical" >
        </LinearLayout>

        <Button
            android:id="@+id/btelement"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.25"
            android:background="@layout/btselector"
            android:onClick="onClick"
            android:text="@string/Elements"
            android:textColor="@color/textthin" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/LinearLayout1"
                style="@style/AudioFileInfoOverlayText"
                android:layout_width="162dp"
                android:layout_height="wrap_content"
                android:background="@drawable/box_element"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:padding="6dp" >

                    <TextView
                        android:id="@+id/TextView06"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="@string/Day"
                        android:textColor="@color/textthin"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/TextView05"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="right"
                        android:text="December1"
                        android:textColor="@color/menu" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/shadow"
                    android:orientation="vertical" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:padding="6dp" >

                    <TextView
                        android:id="@+id/TextView04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="@string/Week"
                        android:textColor="@color/textthin"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/TextView03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="right"
                        android:text="Nov 25-30"
                        android:textColor="@color/menu" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/shadow"
                    android:orientation="vertical" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:padding="6dp" >

                    <TextView
                        android:id="@+id/TextView02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="@string/Month"
                        android:textColor="@color/textthin"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/TextView01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="right"
                        android:text="December"
                        android:textColor="@color/menu" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/shadow"
                    android:orientation="vertical" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:padding="6dp" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="@string/Agenda"
                        android:textColor="@color/textthin"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="right"
                        android:text="December1"
                        android:textColor="@color/menu" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:padding="10dp" >

                <RelativeLayout
                    android:id="@+id/lldisabled"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/tvdisabled"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/sbdisabled"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="@string/disable"
                        android:textColor="@color/textthin"
                        android:textSize="12dp" />

                    <SeekBar
                        android:id="@+id/sbdisabled"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="70dp"
                        android:maxHeight="2dp"
                        android:minHeight="2dp"
                        android:progress="30"
                        android:progressDrawable="@drawable/sb_disabled"
                        android:thumb="@drawable/bg_sb_disable_progress" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/llpressed"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/tvpressed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/sbpressed"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="@string/pressed"
                        android:textColor="@color/textthin"
                        android:textSize="12dp" />

                    <SeekBar
                        android:id="@+id/sbpressed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="70dp"
                        android:maxHeight="2dp"
                        android:minHeight="2dp"
                        android:progress="45"
                        android:progressDrawable="@drawable/sb"
                        android:thumb="@drawable/bg_sb_pressed_progress" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/llfocused"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/tvfocused"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/sbfocused"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="@string/focused"
                        android:textColor="@color/textthin"
                        android:textSize="12dp" />

                    <SeekBar
                        android:id="@+id/sbfocused"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="70dp"
                        android:maxHeight="2dp"
                        android:minHeight="2dp"
                        android:progress="55"
                        android:progressDrawable="@drawable/sb"
                        android:thumb="@drawable/bg_sb_focused_progress" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/llnormal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/tvnormal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/sbnormal"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="@string/normal"
                        android:textColor="@color/textthin"
                        android:textSize="12dp" />

                    <SeekBar
                        android:id="@+id/sbnormal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="70dp"
                        android:maxHeight="2dp"
                        android:minHeight="2dp"
                        android:progress="66"
                        android:progressDrawable="@drawable/sb"
                        android:thumb="@drawable/bg_sb_normal_progress" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/llprogress"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tvloading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:text="@string/loading"
                        android:textColor="@color/textthin" />

                    <TextView
                        android:id="@+id/tvstatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:gravity="right"
                        android:textColor="@color/textthin" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/pb"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:maxHeight="5dp"
                    android:minHeight="5dp"
                    android:progressDrawable="@drawable/progressbar" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>